# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log
# Gmail
account        gmail
host           smtp.gmail.com
port           587
from           yourdoorbell@gmail.com
user           yourdoorbell@gmail.com
password       yourpassword

# Gmail
account        anotherprovider
host           smtp.anotherprovider.net
port           587
from           hey@anotherprovider.net
user           hey@anotherprovider.net
password

# Set a default account
account default : gmail
